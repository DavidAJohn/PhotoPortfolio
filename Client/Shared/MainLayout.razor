@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- navbar -->
<nav class="bg-gray-700" id="navbar-top">
    <div class="md:container">
        <div class="max-w-6xl mx-auto sm:px-6 lg:px-8">
            <div class="relative flex items-center justify-between h-16">

                <!-- Hamburger button for mobile menu -->
                <div class="absolute inset-y-0 left-0 flex items-center md:hidden" @onclick="ToggleNavMenu">
                    <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>

                <!-- Site name & logo, site links and social media icons -->
                <div class="flex items-start w-1/4">
                    <div class="pl-0">
                        <SiteBranding />
                    </div>
                </div>
                <div class="flex flex-nowrap justify-center w-2/4 text-gray-50">
                    <div class="px-4 font-semibold hover:text-gray-200">
                        <span><NavLink href="/gallery" class="hover:text-gray-200">Gallery</NavLink></span>
                    </div>
                    <div class="px-4 font-semibold hover:text-gray-200">
                        <span><NavLink href="#" class="hover:text-gray-200">About Me</NavLink></span>
                    </div>
                    <div class="px-4 font-semibold hover:text-gray-200">
                        <span><NavLink href="#" class="hover:text-gray-200">Contact Me</NavLink></span>
                    </div>
                </div>
                <div class="hidden w-0 md:flex md:justify-end md:w-1/4">
                    <SocialMediaIcons />
                </div>

            </div>
        </div>
    </div>
</nav>

<!-- main body content -->
<main role="main" class="w-full pb-12">
    <div class="py-0">
        @Body
    </div> 
</main>

<!-- footer -->
<Footer />

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
